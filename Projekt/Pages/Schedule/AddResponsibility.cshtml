@page
@model AddResponsibilityModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Space+Mono&display=swap" rel="stylesheet">


 <h1>Add Responsibility</h1>
 
<h3>Jesteś pewien, że chcesz wziąć obowiązek?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Start:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.JobStartDate)
        </dd>
        <dt class="col-sm-2">
            Koniec:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.JobEndDate)
        </dd>
        <dt class="col-sm-2">
            Obowiązek:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.Responsibility)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Job.Id" />
        <input type="submit" value="Tak" class="btn btn-primary" />

        <a asp-page="./JobSchedule"><button type="button" class="btn btn-secondary">wróć</button> </a>
    </form>
</div>