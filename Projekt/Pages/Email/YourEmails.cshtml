@page
@model Projekt.Pages.Email.YourEmailsModel
@{
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Space+Mono&display=swap" rel="stylesheet">

<style>
    a {
        color: inherit; /* blue colors for links too */
        text-decoration: inherit; /* no underline */
    }

    .font-style {
        font-family: 'Space Mono', monospace;
    }
</style>

<div class="">
    <h1>Skrzynka odbiorcza</h1>
    <br />
    <h4>Twoje wiadomości</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Do:
                </th>
                <th>
                    Tytuł:
                </th>
                <th>

                </th>

                <th>
                    Data nadania:
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Letterbox)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReceiverId)
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Title)
                        </a>
                    </td>
                    <th>

                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.MailDate)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>