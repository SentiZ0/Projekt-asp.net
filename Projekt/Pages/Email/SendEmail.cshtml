@page
@model Projekt.Pages.SendEmailModel
@{
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Space+Mono&display=swap" rel="stylesheet">

<style>
    .input {
        margin: 15px 0px;
        float: left;
    }

    .font-style {
        font-family: 'Space Mono', monospace;
    }

    .submit {
        margin: 20px 0px;
        float: left;
    }

    .input-desc {
        line-height: 40px;
        height: 100px;
        top: 0;
    }

    #button1 {
        background-color: #1873f2
    }

    #button3 {
        background-color: #9dacc2;
    }

    .left-size {
        float: left;
    }
    
    .inner {
        display: inline-block;
    }
</style>

<h3>Wyślij Email</h3>

<div class="text-center font-style">
    <link rel="stylesheet" href="~/css/Buttons.css" />
    <form method="post">
        <div>
            <label class="input" asp-for="Letterbox.ReceiverId"></label>
            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Wprowadź email adresata" asp-for="Letterbox.ReceiverId" />
            <label class="input" asp-for="Letterbox.Title"></label>
            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Wprowadź tytuł" asp-for="Letterbox.Title" />
            <label class="input" asp-for="Letterbox.Content"></label>
            <textarea class="form-control input-desc" placeholder="Treść" asp-for=Letterbox.Content></textarea><br />    
        </div>
        <div>
            <button type="submit" id="button1" class="button inner submit"><span>Zatwierdź</span></button>
            <button type="submit" id="button3" class="button inner left-size" asp-page-handler="Return"><span>Powrót </span></button>
        </div>
    </form>
</div>