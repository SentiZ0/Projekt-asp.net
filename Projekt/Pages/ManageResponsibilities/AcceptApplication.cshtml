@page
@model AcceptApplicationModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Space+Mono&display=swap" rel="stylesheet">


 <h1>Akecptuj aplikację</h1>
 
<h3>Jesteś pewien, że chcesz akceptować aplikację?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Start:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.JobStartDate)
        </dd>
        <dt class="col-sm-2">
            Koniec:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.JobEndDate)
        </dd>
        <dt class="col-sm-2">
            Obowiązek:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.Responsibility)
        </dd>
        <dt class="col-sm-2">
            Pracownik:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.WorkerMail)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Job.Id" />
        <input type="submit" value="Tak" class="btn btn-primary" /> |
        <a asp-page="./ApproveResponsibility">Wróć <class="btn btn-light" /></a>
    </form>
</div>